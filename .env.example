# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=Parts API

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/parts_db
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# API Keys
API_KEY_HEADER=X-API-Key
MASTER_API_KEY=your-master-api-key-change-this-in-production

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# APM (Application Performance Monitoring)
NEW_RELIC_APP_NAME=Parts API
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Swagger
SWAGGER_ENABLED=true
SWAGGER_PATH=/api-docs

# Redis (optional for session/cache)
REDIS_URL=redis://localhost:6379
REDIS_TTL=3600

# Email (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@partsapi.com

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# External Services
WEBHOOK_URL=
WEBHOOK_SECRET=